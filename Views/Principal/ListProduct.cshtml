@model IEnumerable<WebEcom.Models.Product>

@{
    ViewBag.Title = "ListProduct";
    Layout = "~/Views/Shared/HomeTemplate.cshtml";
}

<div class="container-fluid">
    <div class="row">
        @foreach (var i in Model)
        {
            <div class="col-md-2" style="background-color:white;height:210px">

                <div  style="height:210px;left:0">
                    <img class="img-thumbnail" 
                         src="@Url.Action("GetImageProduct", "Principal", new { id = i.Product_Id })" />
                </div>
        
            </div>
            <div class="col-md-9" style="background-color:white;height:210px">
                <div class="col-md-12" style="background-color:burlywood;height:50px">
                    <h3>  @Html.DisplayFor(model => i.Product_Name)</h3>
                </div>
                <div class="col-md-12" style="background-color: Background">
                    @Html.DisplayFor(model => i.Product_Descr)
                </div>
                <button type="button" class="btn btn-danger glyphicon glyphicon-shopping-cart"
                        onclick="location.href='@Url.Action("Buy","Cart", new { id=i.Product_Id})'">
                    Buy
                </button>|
                <button type="button" class="btn btn-danger glyphicon glyphicon-file"
                        onclick="location.href='@Url.Action("ProductDetail","Principal", new { id=i.Product_Id})'">
                    View Product
                </button>
            </div>
           <hr />
            
           <div class="col-md-1" style="background-color: white;height:210px">
               <div style="height:80px"></div>
              

               
           </div>
            
        }
    </div>
</div>

