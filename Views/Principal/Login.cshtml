@model WebEcom.Models.User
        
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}
    <div class="container" style="border: 2px yellow solid;
        position: absolute;
        background-color: #d3d6db;
        right: 5px;
        width: 620px;
        height: 600px" >
        <style>

        </style>
        
            @using (Html.BeginForm("Login", "Principal"))
            {
                @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h1 class="text-uppercase text-danger" style="text-align: center;
        text-shadow: 2px 2px 5px blue; font-weight:900">User Login</h1>
        <hr />
        <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-primary progress-bar-animated active" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
        </div>
        <div>
            <img src="~/Content/Profile.png" style="width: 25%;
        height: 25%;
        display: block;
        margin-left: auto;
        margin-right: auto;" />
        </div>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group " style=" margin: auto; width: 100%;@*border: 3px solid green;*@ padding: 5px;">
            <div style="font-size:20px">
                @Html.LabelFor(model => model.User_login, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <br /><br />
            <div class="col-md-10" style="margin:auto;@*border:2px black inset;*@ right:0;">
                @Html.EditorFor(model => model.User_login, new { htmlAttributes = new { @class = "form-control input-lg" } })
                @Html.ValidationMessageFor(model => model.User_login, "", new { @class = "text-danger" })

            </div>

        </div>

        <div class="form-group" style=" margin: auto; width: 100%;@*border: 3px solid green;*@ padding: 5px;">
            <div style="font-size:20px">
                @Html.LabelFor(model => model.User_password, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <br /><br />
            <div class="col-lg-12 ">
                @Html.PasswordFor(model => model.User_password,  new { @class = "form-control input-lg" } )
                @Html.ValidationMessageFor(model => model.User_password, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />


        <div class="form-group" style="@*border:3px green dashed;*@">
            <div class="col-md-offset-2 col-md-10" 
                 style="/*border:3px blue dashed;*/ right:0px;margin:auto;">
                <button class="btn btn-success btn-lg btn-block">@Html.ActionLink("Login", "Login", new { @class = "" })</button>
                <br />
                <a href="@Url.Action("Index","Principal")">
                    <span class="btn btn-warning btn-block btn-lg">Cancel</span>
                </a>
            </div>
        </div>
    </div>
            }
        </div>
  
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

   
